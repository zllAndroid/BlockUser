<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android" >

    <!-- 圆角 -->
    <corners
        android:radius="@dimen/dp3"
        android:topLeftRadius="@dimen/dp3"
        android:topRightRadius="@dimen/dp3"
        android:bottomLeftRadius="@dimen/dp3"
        android:bottomRightRadius="@dimen/dp3"/><!-- 设置圆角半径 -->
    <!-- 间隔 -->
    <padding
        android:left="@dimen/dp1"
        android:top="@dimen/dp1"
        android:right="@dimen/dp1"
        android:bottom="@dimen/dp1"/><!-- 各方向的间隔 -->

    <!-- 大小 -->
    <size
        android:width="@dimen/dp30"
        android:height="@dimen/dp25"/><!-- 宽度和高度 -->

    <solid
        android:color="@color/app_theme"/>

    <!-- 描边，边框 -->
   <stroke
        android:width="@dimen/dp1"
        android:color="@color/white"
        />

</shape>

