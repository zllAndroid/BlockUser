<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/transparent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/tip_window_style"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="@dimen/pop320"
            android:layout_height="@dimen/pop100"
            android:orientation="vertical">

            <TextView
                android:id="@+id/pop_tv_title"
                android:layout_width="match_parent"
                android:layout_height="@dimen/poptextheigh45"
                android:layout_weight="3"
                android:gravity="center"
                android:textSize="@dimen/sp_22" />

            <EditText
                android:id="@+id/pop_et_message"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_weight="1"
                android:background="@null"
                android:enabled="true"
                android:gravity="center"
                android:inputType="textPersonName"
                android:textSize="16sp"
                android:visibility="gone" />

            <TextView
                android:id="@+id/pop_tv_message"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:layout_weight="1"
                android:gravity="center"
                android:textSize="16sp" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/line_color_gray" />

        <LinearLayout
            android:layout_width="320dp"
            android:layout_height="44dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/pop_tv_no"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:textSize="14sp" />

            <View
                android:id="@+id/middle_line"
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_weight="0"
                android:background="@color/line_color_gray"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/pop_tv_ok"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:textSize="14sp" />

        </LinearLayout>
    </LinearLayout>
</FrameLayout>