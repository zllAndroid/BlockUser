<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/dp15"
    android:theme="@style/ThemeOverlay.AppCompat.Dark"
    android:background="@color/grayeee"
    android:gravity="center"

    android:orientation="horizontal">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/dp10"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/head_iv_img"
            android:layout_width="@dimen/dp60"
            android:layout_height="@dimen/dp60"
            android:layout_gravity="center"
            android:layout_margin="@dimen/dp10"
            android:background="@drawable/person_head" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:id="@+id/head_tv_name"
                android:text="android"
                android:layout_marginTop="@dimen/dp10"
                android:textColor="@color/gray333"
                android:textSize="@dimen/sp16"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/head_tv_phone"
                android:text="18065283788"
                android:layout_marginTop="@dimen/dp10"
                android:textColor="@color/gray333"
                android:textSize="@dimen/sp16"
                android:layout_width="wrap_content"
                android:layout_marginLeft="@dimen/dp2"
                android:layout_height="wrap_content" />

        </LinearLayout>
    </LinearLayout>



</LinearLayout>